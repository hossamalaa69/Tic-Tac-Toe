<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#8B008B"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/curvedbutton"
            android:textColor="#000000"
            android:fontFamily="serif"
            android:textSize="50sp"
            android:textStyle="bold"
            android:onClick="ResetGame"
            android:text="reset"
            android:layout_marginBottom="15dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/button_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:background="#00FF7F"
            android:textSize="140sp"
            android:onClick="But00"
            />

        <Button
            android:id="@+id/button_01"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:textColor="#000000"
            android:layout_height="match_parent"
            android:background="#00FF7F"
            android:layout_weight="1"
            android:textSize="140sp"
            android:onClick="But01"
            />

        <Button
            android:id="@+id/button_02"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:layout_height="match_parent"
            android:background="#00FF7F"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="140sp"
            android:onClick="But02"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_10"
            android:layout_width="0dp"
            android:background="#00FFFF"
            android:layout_margin="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="140sp"
            android:onClick="But10"
            />

        <Button
            android:id="@+id/button_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#00FFFF"
            android:textSize="140sp"
            android:onClick="But11"
            />

        <Button
            android:id="@+id/button_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#00FFFF"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_margin="2dp"
            android:textSize="140sp"
            android:onClick="But12"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_20"
            android:layout_width="0dp"
            android:background="#4682B4"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="But20"
            android:textSize="140sp" />

        <Button
            android:id="@+id/button_21"
            android:layout_width="0dp"
            android:background="#4682B4"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:textSize="140sp"
            android:onClick="But21"
            />

        <Button
            android:id="@+id/button_22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#4682B4"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:textSize="140sp"
            android:onClick="But22"
            />

    </LinearLayout>

</LinearLayout>